{
  "name": "@whetstone-research/doppler-sdk",
  "author": "Whetstone Research",
  "version": "0.0.18",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/whetstoneresearch/doppler-sdk"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "typings": "dist/index.d.ts",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "directories": {
    "lib": "src"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "tsc watch ./src/**",
    "test": "vitest run",
    "test:unit": "vitest run --config vitest.unit.config.ts",
    "test:fork": "ANVIL_FORK_ENABLED=true vitest run --config vitest.fork.config.ts",
    "test:live": "LIVE_TEST_ENABLED=true vitest run --config vitest.live.config.ts",
    "test:watch": "vitest watch --config vitest.unit.config.ts",
    "test:coverage": "vitest run --coverage --config vitest.unit.config.ts",
    "build": "tsup",
    "build:watch": "tsup --watch",
    "lint": "oxlint src/",
    "lint:fix": "oxlint src/ --fix",
    "typecheck": "tsc --noEmit",
    "format": "oxfmt --write src/",
    "format:check": "oxfmt --check src/",
    "prepublishOnly": "npm run build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "generate:addresses": "node ./scripts/generate-addresses.mjs --source ../doppler/Deployments.json --out src/deployments.generated.ts",
    "generate-snapshot": "tsx ./scripts/snapshot-addresses.ts"
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^11.2.0",
    "@types/node": "^24.3.0",
    "@vitest/coverage-c8": "^0.33.0",
    "doppler-router": "^1.0.15",
    "dotenv": "^17.2.3",
    "glob": "^10.4.5",
    "graphql-request": "^7.3.1",
    "oxfmt": "^0.24.0",
    "oxlint": "^1.39.0",
    "size-limit": "^11.2.0",
    "tslib": "^2.8.1",
    "tsup": "^8.4.0",
    "tsx": "^4.19.0",
    "typescript": "^5.8.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^2.1.9"
  },
  "dependencies": {
    "viem": "^2.33.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@10.11.0+sha512.6540583f41cc5f628eb3d9773ecee802f4f9ef9923cc45b69890fb47991d4b092964694ec3a4f738a420c918a333062c8b925d312f42e4f0c263eb603551f977"
}
