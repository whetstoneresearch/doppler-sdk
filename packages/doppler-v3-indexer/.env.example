# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/doppler_indexer

# RPC URLs - Add your own RPC endpoints here
PONDER_RPC_URL_1=https://eth-mainnet.alchemyapi.io/v2/YOUR_ALCHEMY_KEY
PONDER_RPC_URL_8453=https://base-mainnet.alchemyapi.io/v2/YOUR_ALCHEMY_KEY
PONDER_RPC_URL_1301=https://rpc.ink.network
PONDER_RPC_URL_1338=https://rpc.unichain.org

# Optional: Custom chain RPC URLs
# PONDER_RPC_URL_<CHAIN_ID>=https://your-custom-rpc-url

# Development settings
NODE_ENV=development
LOG_LEVEL=info

# Optional: Performance tuning
PONDER_MAX_HEALTHY_BLOCK_TIMESTAMP_OFFSET=86400000
PONDER_TELEMETRY_DISABLED=false

# Local Development Settings
DATABASE_SCHEMA=test1
# Chain filtering (comma-separated list of chains to index)
# Available chains: mainnet, base, baseSepolia, unichain, ink
# Leave empty or unset to index all chains
ENABLED_CHAINS=baseSepolia,mainnet